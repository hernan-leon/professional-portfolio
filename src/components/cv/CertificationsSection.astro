---
/**
 * Certifications Section
 * Displays professional certifications
 */

import { getCVData, formatDate } from '../../lib/cv';

const cvData = getCVData();
const { certifications } = cvData;
---

<section class="certifications-section">
  <h2 class="section-title">Certifications</h2>

  <div class="certifications-grid">
    {certifications.map((cert) => (
      <article class="certification-item">
        <h3 class="certification-name">{cert.name}</h3>
        <p class="certification-issuer">{cert.issuer}</p>
        <p class="certification-date">Issued {formatDate(cert.issueDate)}</p>
        {cert.expiryDate && (
          <p class="certification-expiry">Expires {formatDate(cert.expiryDate)}</p>
        )}
        {cert.credentialUrl && (
          <a
            href={cert.credentialUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="certification-link"
          >
            View Credential â†’
          </a>
        )}
      </article>
    ))}
  </div>
</section>

<style>
  .certifications-section {
    margin-bottom: var(--space-12);
  }

  .section-title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-3);
    border-bottom: 2px solid var(--color-border);
  }

  .certifications-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-4);
  }

  @media (min-width: 768px) {
    .certifications-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .certifications-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .certification-item {
    padding: var(--space-4);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background-color: var(--color-background);
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .certification-name {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0;
  }

  .certification-issuer {
    font-size: var(--font-size-sm);
    color: var(--color-accent);
    font-weight: var(--font-weight-medium);
    margin: 0;
  }

  .certification-date,
  .certification-expiry {
    font-size: var(--font-size-sm);
    color: var(--color-text-tertiary);
    margin: 0;
  }

  .certification-link {
    font-size: var(--font-size-sm);
    color: var(--color-accent);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    margin-top: var(--space-1);
  }

  .certification-link:hover {
    text-decoration: underline;
  }
</style>
