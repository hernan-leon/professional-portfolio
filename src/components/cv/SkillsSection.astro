---
/**
 * Skills Section
 * Skills grouped by category in grid layout
 */

import { getCVData } from '../../lib/cv';

const cvData = getCVData();
const { categories } = cvData.skills;
---

<section class="skills-section">
  <h2 class="section-title">Skills & Expertise</h2>

  <div class="skills-grid">
    {categories.map((category) => (
      <article class="skill-category">
        <h3 class="category-name">{category.category}</h3>
        <ul class="skills-list">
          {category.skills.map((skill) => (
            <li class="skill-item">
              <span class="skill-name">{skill.name}</span>
              {skill.proficiency && (
                <span class="skill-proficiency" data-proficiency={skill.proficiency}>
                  {skill.proficiency}
                </span>
              )}
              {skill.yearsOfExperience && (
                <span class="skill-years">{skill.yearsOfExperience}+ yrs</span>
              )}
            </li>
          ))}
        </ul>
      </article>
    ))}
  </div>
</section>

<style>
  .skills-section {
    margin-bottom: var(--space-12);
  }

  .section-title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-3);
    border-bottom: 2px solid var(--color-border);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .skill-category {
    padding: var(--space-5);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    background-color: var(--color-background);
  }

  .category-name {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--color-border);
  }

  .skills-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .skill-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .skill-name {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    font-weight: var(--font-weight-medium);
  }

  .skill-proficiency {
    font-size: var(--font-size-xs);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    text-transform: capitalize;
    font-weight: var(--font-weight-medium);
  }

  .skill-proficiency[data-proficiency="expert"] {
    background-color: #10b981;
    color: white;
  }

  .skill-proficiency[data-proficiency="advanced"] {
    background-color: #3b82f6;
    color: white;
  }

  .skill-proficiency[data-proficiency="intermediate"] {
    background-color: #f59e0b;
    color: white;
  }

  .skill-proficiency[data-proficiency="beginner"] {
    background-color: var(--color-border);
    color: var(--color-text-secondary);
  }

  .skill-years {
    font-size: var(--font-size-xs);
    color: var(--color-text-tertiary);
    margin-left: auto;
  }
</style>
