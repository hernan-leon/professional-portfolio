---
/**
 * Key Highlights Section
 * 3-4 bullet points emphasizing data engineering, PM, analytics
 */

import { getCVData } from '../../lib/cv';

const cvData = getCVData();
const { highlights } = cvData;
---

<section class="highlights">
  <div class="container">
    <h2 class="section-title">Key Achievements</h2>

    <ul class="highlights-list">
      {highlights.map((highlight) => (
        <li class="highlight-item">
          <div class="highlight-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
          </div>
          <p class="highlight-text">{highlight}</p>
        </li>
      ))}
    </ul>

    <div class="cta-container">
      <p class="cta-text">Interested in working together?</p>
      <a href="/contact" class="cta-link">Let's connect â†’</a>
    </div>
  </div>
</section>

<style>
  .highlights {
    padding: var(--space-12) 0;
  }

  .section-title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .highlights-list {
    list-style: none;
    padding: 0;
    margin: 0 auto;
    max-width: 800px;
    display: grid;
    gap: var(--space-4);
  }

  .highlight-item {
    display: flex;
    gap: var(--space-3);
    align-items: flex-start;
    padding: var(--space-4);
    border-radius: var(--radius-md);
    transition: background-color var(--transition-base);
  }

  .highlight-item:hover {
    background-color: rgba(0, 0, 0, 0.02);
  }

  @media (prefers-color-scheme: dark) {
    .highlight-item:hover {
      background-color: rgba(255, 255, 255, 0.05);
    }
  }

  .highlight-icon {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    color: var(--color-accent);
    margin-top: 2px;
  }

  .highlight-text {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  .cta-container {
    margin-top: var(--space-8);
    text-align: center;
  }

  .cta-text {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2);
  }

  .cta-link {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-accent);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .cta-link:hover {
    color: var(--color-accent-hover);
  }
</style>
