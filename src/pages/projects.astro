---
/**
 * Projects Page
 * Grid of featured project cards
 */

import Page from '../layouts/Page.astro';
import ProjectCard from '../components/projects/ProjectCard.astro';
import { getCVData } from '../lib/cv';

const cvData = getCVData();
const { projects } = cvData;

const title = 'Projects - Hernan Leon';
const description = 'Featured projects and implementations including CARDESS.ENGAGE, IFRS9 Compliance DWH for Volkswagen Finance, and BMW China CRM & DWH systems.';
---

<Page title={title} description={description}>
  <div class="projects-page">
    <div class="container">
      <header class="page-header">
        <h1>Featured Projects</h1>
        <p class="page-subtitle">
          Select implementations showcasing data engineering, product management, and business intelligence expertise across automotive and finance sectors.
        </p>
      </header>

      <div class="projects-grid">
        {projects.map((project) => (
          <ProjectCard project={project} />
        ))}
      </div>
    </div>
  </div>
</Page>

<style>
  .projects-page {
    padding: var(--space-8) 0;
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-12);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .page-header h1 {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-3);
  }

  .page-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: var(--font-size-3xl);
    }

    .page-subtitle {
      font-size: var(--font-size-base);
    }
  }
</style>
